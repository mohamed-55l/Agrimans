<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.RegisterController"
            stylesheets="@../../java/org/example/styles/style.css">

    <children>
        <!-- Center Card -->
        <VBox layoutX="300.0" layoutY="100.0"
              alignment="CENTER"
              spacing="15.0"
              prefWidth="350.0"
              styleClass="card">

            <padding>
                <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
            </padding>

            <Label text="Create Account"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E3D27;"/>

            <TextField fx:id="nameField"
                       promptText="Full Name"
                       prefWidth="300.0"
                       style="-fx-padding: 12; -fx-background-radius: 8;"/>

            <TextField fx:id="emailField"
                       promptText="Email"
                       prefWidth="300.0"
                       style="-fx-padding: 12; -fx-background-radius: 8;"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           prefWidth="300.0"
                           style="-fx-padding: 12; -fx-background-radius: 8;"/>

            <PasswordField fx:id="confirmPasswordField"
                           promptText="Confirm Password"
                           prefWidth="300.0"
                           style="-fx-padding: 12; -fx-background-radius: 8;"/>

            <!-- Role Selection -->
            <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="300.0">
                <Label text="I want to:"
                       style="-fx-font-weight: bold; -fx-text-fill: #2E3D27;"/>

                <HBox spacing="20" alignment="CENTER">
                    <RadioButton fx:id="buyerRadio" text="ðŸ›’ Buy Products"
                                 style="-fx-text-fill: #2E3D27;">
                        <toggleGroup>
                            <ToggleGroup fx:id="roleGroup"/>
                        </toggleGroup>
                    </RadioButton>

                    <RadioButton fx:id="sellerRadio" text="ðŸ“¦ Sell Products"
                                 toggleGroup="$roleGroup"
                                 style="-fx-text-fill: #2E3D27;"/>

                    <RadioButton fx:id="agrimanRadio" text="ðŸŒ¾ Both (Agriman)"
                                 toggleGroup="$roleGroup"
                                 style="-fx-text-fill: #2E3D27;"
                                 selected="true"/>
                </HBox>
            </VBox>

            <!-- Info Text -->
            <Label text="ðŸŒ¾ Agrimans can both buy and sell products"
                   style="-fx-text-fill: #4B8B3B; -fx-font-size: 12px;"/>

            <Button text="Register"
                    onAction="#handleRegister"
                    prefWidth="300.0"
                    styleClass="button-primary"
                    style="-fx-padding: 12;"/>

            <Button text="Back to Login"
                    onAction="#handleBackToLogin"
                    prefWidth="300.0"
                    styleClass="button-secondary"/>

        </VBox>
    </children>
</AnchorPane>
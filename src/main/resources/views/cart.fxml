<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15"
      prefWidth="800"
      prefHeight="600"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.CartController"
      stylesheets="@../../java/org/example/styles/style.css"
      style="-fx-padding: 20;">

    <!-- Header with Back Button -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="â† Back to Products"
                onAction="#backToProducts"
                style="-fx-background-color: #6C63FF; -fx-text-fill: white;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="My Shopping Cart"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    </HBox>

    <TableView fx:id="cartTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colProduct" text="Product" prefWidth="250"/>
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="120"/>
            <TableColumn fx:id="colAction" text="Action" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Label text="Total:" style="-fx-font-size: 16px;"/>
        <Label fx:id="totalLabel"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Checkout"
                styleClass="button-primary"
                onAction="#handleCheckout"
                prefWidth="120"/>
    </HBox>
</VBox>
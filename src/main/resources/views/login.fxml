<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.LoginController"
            stylesheets="@../../java/org/example/styles/style.css">

    <children>
        <!-- Center Card -->
        <VBox layoutX="300.0" layoutY="150.0"
              alignment="CENTER"
              spacing="15.0"
              prefWidth="300.0"
              styleClass="card">

            <padding>
                <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
            </padding>

            <Label text="Agrimans Marketplace"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="emailField"
                       promptText="Email"
                       prefWidth="250.0"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           prefWidth="250.0"/>

            <Button text="Login"
                    onAction="#handleLogin"
                    prefWidth="250.0"
                    styleClass="button-primary"/>

            <Button text="Register"
                    onAction="#handleRegister"
                    prefWidth="250.0"/>

        </VBox>
    </children>
</AnchorPane>